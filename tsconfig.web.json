{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "paths": {
      "@apis/*": [
        "apis/*"
      ],
      "@shared/*": [
        "apis/shared/*"
      ],
      "@platform/*": [
        "apis/shared/platform/web/*"
      ]
    }
  },
  "exclude": [
    "src/__tests__",
    "dist",
    "examples",
    "node_modules"
  ]
}